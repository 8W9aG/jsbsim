<?xml version="1.0"?>
<!--
  Simulation environment file for JSBSim
  Specifies: integrator types, planetary environment parameters, etc.
-->

<ENVIRONMENT NAME="{name}">

  <INTEGRATORS>
    <TRANSLATION>
      <ACCELERATION>AB2</ACCELERATION>
      <VELOCITY>TRAPZ</VELOCITY>
    </TRANSLATION>
    <ROTATION>
      <ACCELERATION>AB2</ACCELERATION>
      <VELOCITY>TRAPZ</VELOCITY>
    </ROTATION>
    <POSITION>
      <ACCELERATION>AB2</ACCELERATION>
      <VELOCITY>TRAPZ</VELOCITY>
    </POSITION>
  </INTEGRATORS>


  <PLANET NAME="MARS">
    <RADIUS>10000000.0</RADIUS>
    <ATMOSPHERE>MARS-GRAM</ATMOSPHERE>
    <MASS>XXX.XXX</MASS>
    <OMEGA>0.00XX</OMEGA> <!-- planet rotational rate -->
  </PLANET>

  <TIME>
    <DATE>136</DATE>
    <UCT>21:00:00</UCT>
    <INITIAL_LOCAL>00:00:00</INITIAL_LOCAL>
  </TIME>

  <INITIALIZE>
    <UBODY>0.0</UBODY>
    <VBODY>0.0</VBODY>
    <WBODY>0.0</WBODY>
    <LATITUDE>47.0</LATITUDE>
    <LONGITUDE>122.0</LONGITUDE>
    <PHI>0.0</PHI>
    <THETA>0.0</THETA>
    <PSI>0.0</PSI>
    <ALTITUDE>4.7</ALTITUDE>
  </INITIALIZE>

  <!-- optional -->
  <INPUT NAME="192.168.0.3" TYPE="SOCKET" PORT="2155" RATE_IN_HZ="120">
    <FDM_DATA_IN_STRUCTURE>ON</FDM_DATA_IN_STRUCTURE>
  </INPUT>

  <OUTPUT NAME="ARIES.csv" TYPE="CSV" RATE_IN_HZ="10">
    <SIMULATION>OFF</SIMULATION>
    <ATMOSPHERE>ON</ATMOSPHERE>
    <MASSPROPS>ON</MASSPROPS>
    <AEROSURFACES>ON</AEROSURFACES>
    <RATES>ON</RATES>
    <VELOCITIES>ON</VELOCITIES>
    <FORCES>ON</FORCES>
    <MOMENTS>ON</MOMENTS>
    <POSITION>ON</POSITION>
    <COEFFICIENTS>ON</COEFFICIENTS>
    <GROUND_REACTIONS>ON</GROUND_REACTIONS>
    <FCS>ON</FCS>
    <PROPULSION>ON</PROPULSION>
  </OUTPUT>

  <!-- optional -->
  <OUTPUT NAME="192.168.0.3" TYPE="SOCKET" PORT="2156" RATE_IN_HZ="120">
    <FDM_DATA_OUT_STRUCTURE>ON</FDM_DATA_OUT_STRUCTURE>
  </OUTPUT>

</ENVIRONMENT>
