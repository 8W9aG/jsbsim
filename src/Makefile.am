FGComm_SOURCES = JSBSimFGComm.cpp
FGComm_LDADD = libjsbsim.la -lm

else

noinst_HEADERS = $(LIBRARY_INCLUDES)

JSBSim_SOURCES = JSBSim.cpp $(LIBRARY_SOURCES)
JSBSim_LDADD = \
	initialization/libInit.a \
	models/libModels.a \
