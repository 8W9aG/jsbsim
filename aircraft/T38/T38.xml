    <flight_control name="FCS: T38-FCS">
        <channel name="Pitch">
            <component name="Pilot Pitch Sum" type="SUMMER">
                <input>fcs/elevator-cmd-norm</input>
                <input>fcs/pitch-trim-cmd-norm</input>
                <clip>
                    <min>-1</min>
                    <max>1</max>
                </clip>
            </component>

            <component name="Pitch Feel" type="SCHEDULED_GAIN">
                <input>fcs/pilot-pitch-sum</input>
                <table>
                  <independentVar>velocities/mach-norm</independentVar>
                    <tableData>
                        0.0000	1.0000
                        0.6000	1.0000
                        1.2000	0.7000
                    </tableData>
                </table>
            </component>

            <component name="Elevator Control" type="AEROSURFACE_SCALE">
                <input>fcs/pitch-feel</input>
                <limit>
                    <min>-0.3</min>
                    <max>0.175</max>
                </limit>
                <output>fcs/elevator-pos-rad</output>
            </component>
        </channel>
        <channel name="Roll">
            <component name="Pilot Roll Sum" type="SUMMER">
                <input>fcs/aileron-cmd-norm</input>
                <input>fcs/roll-trim-cmd-norm</input>
                <clip>
                    <min>-1</min>
                    <max>1</max>
                </clip>
            </component>

            <component name="Roll Feel" type="SCHEDULED_GAIN">
                <input>fcs/pilot-roll-sum</input>
                <table>
                  <independentVar>velocities/mach-norm</independentVar>
                    <tableData>
                        0.0000	1.0000
                        0.6000	1.0000
                        1.2000	0.7000
                    </tableData>
                </table>
            </component>

            <component name="Left Aileron Control" type="AEROSURFACE_SCALE">
                <input>fcs/roll-feel</input>
                <limit>
                    <min>-0.35</min>
                    <max>0.26</max>
                </limit>
                <output>fcs/left-aileron-pos-rad</output>
            </component>

            <component name="Right Aileron Control" type="AEROSURFACE_SCALE">
                <input>-fcs/roll-feel</input>
                <limit>
                    <min>-0.35</min>
                    <max>0.26</max>
                </limit>
                <output>fcs/right-aileron-pos-rad</output>
            </component>
        </channel>
        <channel name="Yaw">
            <component name="Rudder Command Sum" type="SUMMER">
                <input>fcs/rudder-cmd-norm</input>
                <input>fcs/yaw-trim-cmd-norm</input>
                <clip>
                    <min>-1</min>
                    <max>1</max>
                </clip>
            </component>

            <component name="Yaw SAS Rate" type="SCHEDULED_GAIN">
                <input>velocities/r-aero-rad_sec</input>
                <table>
                  <independentVar>velocities/mach-norm</independentVar>
                    <tableData>
                        0.0000	0.0000
                        0.1000	0.0000
                        0.1100	1.0000
                    </tableData>
                </table>
            </component>

            <component name="Yaw SAS Beta" type="SCHEDULED_GAIN">
                <input>aero/beta-rad</input>
                <table>
                  <independentVar>velocities/mach-norm</independentVar>
                    <tableData>
                        0.0000	0.0000
                        1.2000	0.0000
                    </tableData>
                </table>
            </component>

            <component name="Yaw SAS Sum" type="SUMMER">
                <input>fcs/yaw-sas-rate</input>
                <input>fcs/yaw-sas-beta</input>
                <clip>
                    <min>-0.1</min>
                    <max>0.1</max>
                </clip>
            </component>

            <component name="Rudder Sum" type="SUMMER">
                <input>fcs/rudder-command-sum</input>
                <input>fcs/yaw-sas-sum</input>
                <clip>
                    <min>-1</min>
                    <max>1</max>
                </clip>
            </component>

            <component name="Rudder Control" type="AEROSURFACE_SCALE">
                <input>fcs/rudder-sum</input>
                <limit>
                    <min>-0.35</min>
                    <max>0.35</max>
                </limit>
                <output>fcs/rudder-pos-rad</output>
            </component>
        </channel>
        <channel name="Flaps">
<!--
        <component name="Throttle1" type="PURE_GAIN">
            <input>fcs/throttle-cmd-norm</input>
