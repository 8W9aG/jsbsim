                      <table>
                          <independentVar>aero/alpha-rad</independentVar>
                          <tableData>
                              -1.5700	1.5000
                              -0.2600	0.0320
                              0.0000	0.0160
                              0.2600	0.0320
                              1.5700	1.5000
