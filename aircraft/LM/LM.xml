    <flight_control name="FCS: X-15 SAS">

        <component name="Pitch Trim Sum" type="SUMMER">
            <input>fcs/elevator-cmd-norm</input>
            <input>fcs/pitch-trim-cmd-norm</input>
            <clip>
                <min>-1</min>
                <max>1</max>
            </clip>
        </component>

        <component name="Pitch Command Scale" type="AEROSURFACE_SCALE">
            <input>fcs/pitch-trim-sum</input>
            <range>
                <min>-50</min>
                <max>50</max>
            </range>
        </component>

        <component name="Pitch Gain 1" type="PURE_GAIN">
            <input>fcs/pitch-command-scale</input>
            <gain>-0.36</gain>
        </component>

        <component name="Pitch Scheduled Gain 1" type="SCHEDULED_GAIN">
            <input>fcs/pitch-gain-1</input>
            <gain>0.017</gain>
        </component>

        <component name="Roll Command Scale" type="AEROSURFACE_SCALE">
            <input>fcs/aileron-cmd-norm</input>
            <range>
                <min>-20</min>
                <max>20</max>
            </range>
        </component>

        <component name="Roll Gain 1" type="PURE_GAIN">
            <input>fcs/roll-command-scale</input>
            <gain>0.42</gain>
        </component>

        <component name="Roll Gain 2" type="PURE_GAIN">
            <input>fcs/roll-gain-1</input>
            <gain>0.027</gain>
        </component>

        <component name="Yaw Command Scale" type="AEROSURFACE_SCALE">
            <input>fcs/rudder-cmd-norm</input>
            <range>
                <min>-250</min>
                <max>250</max>
            </range>
        </component>

        <component name="Yaw Gain 1" type="PURE_GAIN">
            <input>fcs/yaw-command-scale</input>
            <gain>0.082</gain>
        </component>

        <component name="Yaw Gain 2" type="PURE_GAIN">
            <input>fcs/yaw-gain-1</input>
            <gain>0.04</gain>
        </component>

        <component name="Pitch SAS Feedback" type="PURE_GAIN">
            <input>velocities/q-rad_sec</input>
            <gain>0.75</gain>
        </component>

        <component name="Yaw-Roll Crossover Gain" type="PURE_GAIN">
            <input>velocities/r-rad_sec</input>
            <gain>-0.9</gain>
        </component>

        <component name="Yaw Coupled Aileron Feedback Sum" type="SUMMER">
            <input>velocities/p-rad_sec</input>
            <input>fcs/yaw-roll-crossover-gain</input>
        </component>

        <component name="Roll SAS Gain" type="PURE_GAIN">
            <input>fcs/yaw-coupled-aileron-feedback-sum</input>
            <gain>-0.5</gain>
        </component>

        <component name="Yaw SAS Gain" type="PURE_GAIN">
            <input>velocities/r-rad_sec</input>
            <gain>0.3</gain>
        </component>

        <component name="Elevator Positioning" type="SUMMER">
            <input>fcs/pitch-scheduled-gain-1</input>
            <input>fcs/pitch-sas-feedback</input>
            <clip>
                <min>-0.26</min>
                <max>0.61</max>
            </clip>
        </component>

        <component name="Elevator Filter" type="LAG_FILTER">
            <input>fcs/elevator-positioning</input>
            <c1>600</c1>
            <output>fcs/elevator-pos-rad</output>
        </component>

        <component name="Aileron Positioning" type="SUMMER">
            <input>fcs/roll-gain-2</input>
            <input>fcs/roll-sas-gain</input>
            <clip>
                <min>-0.35</min>
                <max>0.35</max>
            </clip>
            <output>fcs/left-aileron-pos-rad</output>
        </component>

        <component name="Rudder Positioning" type="SUMMER">
            <input>fcs/yaw-gain-2</input>
            <input>fcs/yaw-sas-gain</input>
            <clip>
                <min>-0.52</min>
                <max>0.52</max>
            </clip>
            <output>fcs/rudder-pos-rad</output>
        </component>
    </flight_control>
