<?xml version="1.0"?>
<runscript name="B747-400 takeoff run">
  <!--
    This run is for testing B747-400 runs
  -->

  <use aircraft="747"/>
  <use initialize="reset00"/>
  <run start="0.0" end="140" dt="0.00833333">
    <when>
      <parameter name="sim-time-sec" comparison="ge" value="0.25"/>
      <parameter name="sim-time-sec" comparison="le" value="1.00"/>
      <set name="propulsion/active_engine" value="-1"/>
      <set name="fcs/throttle-cmd-norm[0]" value="0.3" action="FG_RAMP" tc ="2.0"/>
      <set name="fcs/throttle-cmd-norm[1]" value="0.3" action="FG_RAMP" tc ="2.0"/>
      <set name="fcs/throttle-cmd-norm[2]" value="0.3" action="FG_RAMP" tc ="2.0"/>
      <set name="fcs/throttle-cmd-norm[3]" value="0.3" action="FG_RAMP" tc ="2.0"/>
      <set name="propulsion/starter_cmd" value="1"/>
    </when>

    <when>
      <parameter name="propulsion/engine[0]/n2" comparison="ge" value="15"/>
      <set name="fcs/throttle-cmd-norm[0]" value="1.0" action="FG_RAMP" tc ="0.05"/>
      <set name="fcs/throttle-cmd-norm[1]" value="1.0" action="FG_RAMP" tc ="0.05"/>
      <set name="fcs/throttle-cmd-norm[2]" value="1.0" action="FG_RAMP" tc ="0.05"/>
      <set name="fcs/throttle-cmd-norm[3]" value="1.0" action="FG_RAMP" tc ="0.05"/>
      <set name="propulsion/cutoff_cmd" value="0"/>
    </when>

    <when> <!-- Set the Elevator to takeoff -->
      <parameter name="aero/qbar-psf" comparison="ge" value="17.0"/>
      <parameter name="position/h-sl-ft" comparison="le" value="2000"/>
      <set name="fcs/elevator-cmd-norm" value="-0.5" action="FG_RAMP" tc ="2.0"/>
    </when>
  </run>

</runscript>
