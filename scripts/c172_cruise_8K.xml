<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="http://jsbsim.sourceforge.net/JSBSimScript.xsl"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://jsbsim.sf.net/JSBSimScript.xsd"
    name="C172 cruise at 8K, 80% power">
  <description>This run is for testing the C172 altitude hold autopilot and cruise performance</description>
  <use aircraft="c172x" initialize="reset01"/>
  <run start="0.0" end="4000" dt="0.0083333">
    <event name="event name">
      <condition>
        sim-time-sec  ge  0.25
      </condition>
      <set name="fcs/throttle-cmd-norm" action="FG_RAMP" value="1.0" tc="0.05"/>
      <set name="fcs/mixture-cmd-norm" action="FG_RAMP" value="0.85" tc="0.05"/>
      <set name="propulsion/magneto_cmd" value="3"/>
      <set name="propulsion/starter_cmd" value="1"/>
    </event>
    <event name="event name">
      <condition>
        sim-time-sec  gt  0.50
      </condition>
      <set name="simulation/do_trim" value="0"/>
    </event>
    <event name="event name">
      <condition>sim-time-sec  ge  10</condition>
      <set name="ap/heading_setpoint" value="200"/>
      <set name="ap/heading_hold" value="1"/>
      <set name="ap/altitude_setpoint" value="8000.0"/>
      <set name="ap/altitude_hold" value="1"/>
    </event>
  </run>
</runscript>
